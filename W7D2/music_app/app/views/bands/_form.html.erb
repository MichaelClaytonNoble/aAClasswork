
<% if type==:new%>
  <% action_url = bands_url %>
  <% button_value = "Add Band"%>
<% else %>
  <% action_url = band_url(band) %>
  <%button_value = "Edit Band"%>
<% end %>


<form action="<%=action_url%>" method="POST">
  <% if type == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <%= auth_token %>

  <p>
    <label for='band_name'>Name</label>
    <input id='band_name' type="text" name="band[name]">
  </p>

  <input type="submit" value="<%=button_value%>">


</form>